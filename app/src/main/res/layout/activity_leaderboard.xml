                    android:layout_height="match_parent"
                    android:text="30"
                    android:gravity="end|center"
                    android:textSize="25sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"/>

            </LinearLayout>

            <LinearLayout
